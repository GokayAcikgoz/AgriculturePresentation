@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Duyuru Düzenleme</h4>

                  <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementID)
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Tarih</label>
                      <input type="date" class="form-control" id="exampleInputName1" placeholder="Tarih" asp-for="Date">
                    </div>
                    <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
                  </form>
                </div>
              </div>
            </div>

